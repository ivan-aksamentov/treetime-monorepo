{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "src/generated/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    ".build",
    ".cache",
    ".idea",
    ".ignore",
    ".reports",
    ".vscode",
    "3rdparty",
    "node_modules",
    "public",
    "static",
    "tsconfig.json"
  ],
  "include": [
    "./*.js",
    "./*.jsx",
    "./*.ts",
    "./*.tsx",
    "./**/.*.js",
    "./**/.*.jsx",
    "./**/.*.ts",
    "./**/.*.tsx",
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
